{
    "name": "tech-journal-monorepo",
    "version": "1.0.0",
    "description": "Tech Journal - Monorepo for Frontend and Backend",
    "private": true,
    "workspaces": [
        "packages/frontend",
        "packages/backend"
    ],
    "scripts": {
        "dev:frontend": "npm run dev -w packages/frontend",
        "dev:backend": "npm run start:dev -w packages/backend",
        "build:frontend": "npm run build -w packages/frontend",
        "build:backend": "npm run build -w packages/backend",
        "build": "npm run build:backend && npm run build:frontend",
        "docker:build": "docker-compose -f docker-compose.prod.yml build",
        "docker:up": "docker-compose -f docker-compose.prod.yml up -d",
        "docker:down": "docker-compose -f docker-compose.prod.yml down",
        "docker:logs": "docker-compose -f docker-compose.prod.yml logs -f",
        "seed": "npm run seed -w packages/backend"
    },
    "keywords": [
        "blog",
        "nestjs",
        "react",
        "monorepo"
    ],
    "author": "",
    "license": "MIT"
}